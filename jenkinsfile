pipeline {
    agent {
        docker{
            image 'cypress/browsers'
        }
    }
     parameters {
        choice(name: 'CHOICE', choices: ['regression', 'positive', 'negative'], description: 'choisir un TAG')
    }
    stages {
        stage('Install Dependencies') {
            steps {
                script {

                    sh 'npm ci'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {

                    sh 'npx cypress run --env TAGS=@${params.CHOICE}'
                }
            }
        }


    }

    post {
        always {
          script {
            echo 'Les artifacts'
             sh 'node cucumber-report-generator.js'

            archiveArtifacts artifacts: 'rapports/*/', allowEmptyArchive: true

          }
        }
    }
}
