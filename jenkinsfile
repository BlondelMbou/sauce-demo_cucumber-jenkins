pipeline {
    agent {
        docker {
            image 'cypress/included:12.17.1' 
                }

    stages {
        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm ci'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    sh 'npx cypress run'
                }
            }
        }

        stage('Generate Report') {
            steps {
                script {
                    sh 'node cucumber-report-generator.js'
                }
            }
        }
    }
}
